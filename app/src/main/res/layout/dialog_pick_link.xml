<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:minWidth="300dp"
              android:padding="5dp">

  <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_recent_texts" />

  <Spinner android:id="@+id/pick_link_spinner_recent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

  <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_concept" />

  <Spinner android:id="@+id/pick_link_spinner_concept"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

  <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_values" />

  <Spinner android:id="@+id/pick_link_spinner_value1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

  <Spinner android:id="@+id/pick_link_spinner_value2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

  <Spinner android:id="@+id/pick_link_spinner_value3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

  <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <Button android:id="@+id/pick_link_button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:layout_marginTop="5dp" />

    <Button android:id="@+id/pick_link_button_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok"
            android:layout_marginTop="5dp" />
  </LinearLayout>
</LinearLayout>

