<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="SphinxActionBar">
		<item name="android:background">@color/actionbar_background</item>
		<item name="titleTextColor">@color/actionbar_primary_text</item>
		<item name="subtitleTextColor">@color/actionbar_secondary_text</item>
	</style>

	<style name="SphinxActionBarSpinner" parent="Widget.AppCompat.Spinner">
		<item name="android:background">@drawable/actionbar_spinner</item>
	</style>

	<style name="SphinxActionBarSearch" parent="Widget.AppCompat.Light.SearchView">
		<item name="searchIcon">@drawable/ic_ab_search</item>
		<item name="queryBackground">@null</item>
		<item name="submitBackground">@null</item>
		<item name="searchHintIcon">@drawable/ic_ab_blend_search</item>
		<item name="defaultQueryHint">@string/toolbar_search_hint</item>

		<!--item name="layout">@layout/search_view</item>
		<item name="queryBackground">@drawable/textfield_searchview_holo_dark</item>
		<item name="submitBackground">@drawable/textfield_searchview_right_holo_dark</item-->
		<item name="closeIcon">@drawable/ic_ab_blend_search_close</item>
		<!--item name="searchIcon">@drawable/ic_search_api_holo_dark</item>
		<item name="searchHintIcon">@drawable/ic_search_api_holo_dark</item>
		<item name="goIcon">@drawable/ic_go_search_api_holo_dark</item>
		<item name="voiceIcon">@drawable/ic_voice_search_api_holo_dark</item>
		<item name="commitIcon">@drawable/ic_commit_search_api_holo_dark</item>
		<item name="suggestionRowLayout">@layout/search_dropdown_item_icons_2line</item-->

		<!--item name="android:background">@drawable/actionbar_spinner</item-->
		<!--item name="android:textColor">@color/actionbar_primary_text</item-->
	</style>

	<style name="SphinxOverflowButton" parent="Widget.AppCompat.Light.ActionButton.Overflow">
		<item name="android:minWidth">?attr/actionBarSize</item>
		<item name="android:width">?attr/actionBarSize</item>
		<item name="android:minHeight">?attr/actionBarSize</item>
		<item name="android:height">?attr/actionBarSize</item>
		<item name="android:src">@drawable/ic_ab_overflow</item>
	</style>

	<style name="SphinxActionButton" parent="Widget.AppCompat.Light.ActionButton">
		<item name="android:minWidth">?attr/actionBarSize</item>
		<item name="android:width">?attr/actionBarSize</item>
		<item name="android:minHeight">?attr/actionBarSize</item>
		<item name="android:height">?attr/actionBarSize</item>
	</style>

	<style name="SphinxPopupMenuListView" parent="Widget.AppCompat.ListView.DropDown">
		<item name="android:divider">@color/menu_item_divider</item>
		<item name="android:dividerHeight">1dp</item>
	</style>

	<style name="SphinxTextAppearance" parent="TextAppearance.AppCompat">
		<item name="android:textColor">#ff990099</item>
	</style>

	<style name="SphinxTextAppearanceInverse" parent="TextAppearance.AppCompat.Inverse">
		<item name="android:textColor">#ff000099</item>
	</style>

	<style name="SphinxTextAppearanceLarge" parent="TextAppearance.AppCompat.Large">
		<item name="android:textColor">#ffcc9900</item>
	</style>

	<style name="SphinxTextAppearanceLargeInverse" parent="TextAppearance.AppCompat.Large.Inverse">
		<item name="android:textColor">#ff99cc00</item>
	</style>

	<style name="SphinxTextAppearanceMedium" parent="TextAppearance.AppCompat.Medium">
		<item name="android:textColor">#ff009900</item>
	</style>

	<style name="SphinxTextAppearanceMediumInverse" parent="TextAppearance.AppCompat.Medium.Inverse">
		<item name="android:textColor">#ff009999</item>
	</style>

	<style name="SphinxTextAppearanceSmall" parent="TextAppearance.AppCompat.Small">
		<item name="android:textColor">@color/text_default</item>
	</style>

	<style name="SphinxTextAppearanceSmallInverse" parent="TextAppearance.AppCompat.Small.Inverse">
		<item name="android:textColor">#ff0099ff</item>
	</style>

	<style name="SphinxEditText" parent="Widget.AppCompat.EditText">
		<item name="android:paddingLeft">10dp</item>
		<item name="android:minHeight">44dp</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="SphinxSpinner" parent="Widget.AppCompat.Spinner">
		<item name="android:background">@drawable/simple_spinner</item>
		<item name="android:minHeight">44dp</item>
	</style>

	<style name="SphinxButton" parent="Widget.AppCompat.Button">
		<item name="android:background">@drawable/button</item>
		<item name="android:minHeight">44dp</item>
	</style>

	<style name="SphinxUnicodeIconButton">
		<item name="android:textSize">24sp</item>
		<item name="android:padding">0dp</item>
		<item name="android:minHeight">44dp</item>
		<item name="android:minWidth">44dp</item>
	</style>

	<style name="SphinxUnicodeToolButton">
		<item name="android:textSize">24dp</item>
		<item name="android:padding">0dp</item>
		<item name="android:minHeight">38dp</item>
		<item name="android:minWidth">38dp</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:paddingTop">0dp</item>
		<item name="android:paddingBottom">0dp</item>
	</style>

	<style name="SphinxTextView" parent="@android:style/Widget.TextView">
		<item name="android:textSize">14sp</item>
		<item name="android:paddingLeft">3dp</item>
	</style>

	<style name="SphinxTextView.Title" parent="@android:style/Widget.TextView">
		<item name="android:background">@color/label_background</item>
		<item name="android:textSize">16sp</item>
		<item name="android:typeface">sans</item>
		<item name="android:singleLine">true</item>
	</style>

	<style name="SphinxTextView.Markdown" parent="@android:style/Widget.TextView">
		<item name="android:textSize">18sp</item>
		<item name="android:typeface">sans</item>
		<item name="android:maxLength">1048576</item>
		<item name="android:singleLine">false</item>
		<item name="android:padding">3dp</item>
	</style>

	<style name="SphinxTextView.Help" parent="@android:style/Widget.TextView">
		<item name="android:textSize">18sp</item>
		<item name="android:typeface">sans</item>
		<item name="android:maxLength">1048576</item>
		<item name="android:singleLine">false</item>
		<item name="android:padding">3dp</item>
	</style>

	<style name="SphinxEditText.Markdown" parent="Widget.AppCompat.EditText">
		<item name="android:background">@android:color/transparent</item>
		<item name="android:padding">5dp</item>
		<item name="android:textSize">18sp</item>
		<item name="android:typeface">monospace</item>
		<item name="android:inputType">text|textMultiLine|textCapSentences</item>
		<item name="android:minLines">4</item>
		<item name="android:gravity">top|left</item>
	</style>

	<style name="SphinxAlertDialog" parent="AlertDialog.AppCompat.Light">
	</style>

	<style name="SphinxAlertDialog.Title">
		<item name="android:textAppearance">@style/SphinxAlertDialog.Title.TextAppearance</item>
	</style>

	<style name="SphinxAlertDialog.Title.TextAppearance" parent="TextAppearance.AppCompat.Title">
	</style>

	<style name="SphinxAlertDialog.ButtonBar" parent="Widget.AppCompat.ButtonBar">
	</style>

	<style name="SphinxAlertDialog.ButtonBar.Button" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
		<item name="android:background">@drawable/button</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="SphinxAlertDialog.ButtonBar.Button.Positive" />
	<style name="SphinxAlertDialog.ButtonBar.Button.Negative" />

	<style name="SphinxToolPanel">
		<item name="android:background">@drawable/panel_background</item>
	</style>

	<style name="SphinxGraphView">
		<!--item name="android:background">@color/graph_view_background</item-->
	</style>
</resources>

